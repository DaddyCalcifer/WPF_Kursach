<Page x:Class="lab1.FindActsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lab1"
      xmlns:core ="clr-namespace:lab1.Model"
      mc:Ignorable="d"
      Height="324" Width="341"
      Title="ProviderFindPage" Unloaded="Page_Unloaded">
    <Page.Resources>
    </Page.Resources>
    <Grid Background="White">
        <Button HorizontalAlignment="Left" Margin="87,248,0,0" VerticalAlignment="Top" Height="26" Width="195" Click="Button_Click">
            <Image Source="/icons/Find.png"/>
        </Button>
        <Button HorizontalAlignment="Left" Margin="289,248,0,0" VerticalAlignment="Top" Height="26" Width="31" Click="Button_Click_4">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <Label Content="Поиск" HorizontalAlignment="Left" Margin="20,248,0,0" VerticalAlignment="Top"/>
        <Button HorizontalAlignment="Left" Margin="291,19,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_3">
            <Image Source="/icons/Find.png"/>
        </Button>
        <TextBox x:Name="idBox" HorizontalAlignment="Left" Margin="85,19,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="195" Height="31"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top"/>
        <Button HorizontalAlignment="Left" Margin="291,61,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_5">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <Label Content="Дата от" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top"/>
        <Label Content="до" HorizontalAlignment="Left" Margin="170,64,0,0" VerticalAlignment="Top"/>
        <Label Content="Склад" HorizontalAlignment="Left" Margin="12,109,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="structBox" HorizontalAlignment="Left" Margin="87,104,0,0" VerticalAlignment="Top" Width="195" Height="31"/>
        <Button HorizontalAlignment="Left" Margin="289,104,0,0" VerticalAlignment="Top" Height="31" Width="31" Click="Button_Click_1">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <DatePicker x:Name="fromDate" HorizontalAlignment="Left" Margin="85,61,0,0" VerticalAlignment="Top" Width="80" Height="31"/>
        <DatePicker x:Name="tillDate" HorizontalAlignment="Left" Margin="200,61,0,0" VerticalAlignment="Top" Width="80" Height="31"/>
        <Label Content="Принял" HorizontalAlignment="Left" Margin="12,152,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="addedByBox" HorizontalAlignment="Left" Margin="87,0,0,0" VerticalAlignment="Center" Width="195" Height="32"/>
        <Button x:Name="addedButton" HorizontalAlignment="Left" Margin="289,0,0,0" VerticalAlignment="Center" Height="32" Width="31" Click="Button_Click_2">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <Label Content="Поставщик" HorizontalAlignment="Left" Margin="10,197,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="providerBox" HorizontalAlignment="Left" Margin="87,192,0,0" VerticalAlignment="Top" Width="195" Height="31" SelectionChanged="providerBox_SelectionChanged"/>
        <Button HorizontalAlignment="Left" Margin="289,192,0,0" VerticalAlignment="Top" Height="31" Width="31" Click="Button_Click_7">
            <Image Source="/icons/Delete.png"/>
        </Button>

    </Grid>
</Page>
