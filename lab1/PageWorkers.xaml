<Page x:Class="lab1.PageWorkers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:core ="clr-namespace:lab1.Model"
      xmlns:local="clr-namespace:lab1"
      xmlns:command="clr-namespace:lab1.Commands"
      xmlns:rule="clr-namespace:lab1.ValidationRules"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain"
      Loaded="Page_Loaded">
    <Page.Resources>
        <DiscreteObjectKeyFrame x:Key="FlagKey" Value="{Binding addedBy}"/>
        <core:ListRole x:Key="listRole"/>
        <Style x:Key="errorStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="-2"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="Background" Value="red"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="ToolTip"
Value="{Binding RelativeSource={RelativeSource Self},
Path=(Validation.Errors)[0].ErrorContent}"/>
                    
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <StackPanel>
        <Menu>
            <MenuItem Header="Действие">
                <MenuItem Header="Отменить" Command="Undo"/>
                <Separator/>
                <MenuItem Header="Создать" Command="New"/>
                <MenuItem Header="Редактировать" Command="Cut"/>
                <MenuItem Header="Сохранить" Command="Save"/>
                <MenuItem Header="Найти" Command="Find"/>
                <Separator/>
                <MenuItem Header="Удалить" Command="Delete"/>
            </MenuItem>
            <MenuItem Header="Аккаунт">
                <MenuItem Header="Открыть профиль" Click="MenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Сменить пользователя" Click="MenuItem_Click_1"/>
            </MenuItem>
        </Menu>
        <ToolBar Name="ToolBar1" Margin="3" Height="60">
            <Button Name="Undo" Command="Undo" ToolTip="Отменить редактирование/создание"
                    Margin="5,2,5,2" Content="{materialDesign:PackIcon Kind=Undo}">
            </Button>
            <Button Name="Add" ToolTip="Добавить/Создать" Command="New"
                    Margin="5,2,5,2" Height="50" Width="50" Visibility="Collapsed">
                <Image Source="icons/Add.png" Height="40" Width="40"></Image>
            </Button>
            <Button Name="Find" ToolTip="Найти" Command="Find"
                    Margin="5,2,5,2" Content="{materialDesign:PackIcon Kind=Search}">
            </Button>
            <Button Name="Edit" ToolTip="Редактировать" Command="Cut"
                    Margin="5,2,5,2" Height="50" Width="50" Visibility="Collapsed">
                <Image Source="icons/Edit.png" Height="40" Width="40"></Image>
            </Button>
            <Button Name="Save" ToolTip="Сохранить" Command="Save"
                    Margin="5,2,5,2" Content="{materialDesign:PackIcon Kind=ContentSave}">
            </Button>
            <Separator/>
            <Button Name="Delete" ToolTip="Удалить" Command="Delete"
                    Margin="5,2,5,2" Content="{materialDesign:PackIcon Kind=AccountCancel}">
                <Button.CommandBindings>
                    <CommandBinding Command="Delete"
                        Executed="DeleteCommandBinding_Executed"
                        CanExecute="DeleteCommandBinding_CanExecute" />
                </Button.CommandBindings>
            </Button>
            <Button Name="Unban" ToolTip="Разблокировать"
                    Margin="5,2,5,2" Content="{materialDesign:PackIcon Kind=AccountCache}" Click="Unban_Click">
            </Button>
            <Button Name="MakeAdmin" ToolTip="Сделать администратором"
                    Margin="5,2,5,2" Content="{materialDesign:PackIcon Kind=AccountHardHat}" Click="MakeAdmin_Click">
            </Button>
            <Separator x:Name="AdminSep" Margin="10,0,10,0"/>
            <Button Name="ToAdminMenu" ToolTip="Вернуться в окно администратора"
                    Margin="5,2,5,2" Content="{materialDesign:PackIcon Kind=MenuOpen}" Click="ToAdminMenu_Click">
            </Button>
        </ToolBar>
        <DataGrid Name="DataGridItem"  
                  ItemsSource="{Binding}"
                  AutoGenerateColumns="False" 
                  HorizontalAlignment="Left" 
                  RowBackground="White"
                  AlternatingRowBackground="#eaeaea"
                  IsReadOnly="True" RowHeight="40" Cursor="Hand"
                  AutoGeneratingColumn="OnAutoGeneratingColumn">
            <DataGrid.RowValidationErrorTemplate>
                <ControlTemplate>
                    <Grid Margin="0,-2,0,-2"
            ToolTip="{Binding RelativeSource={RelativeSource
            FindAncestor, AncestorType={x:Type DataGridRow}},
            Path=(Validation.Errors)[0].ErrorContent}">
                        <Ellipse StrokeThickness="0" Fill="Red" 
              Width="{TemplateBinding FontSize}" 
              Height="{TemplateBinding FontSize}" />
                        <TextBlock Text="!" FontSize="{TemplateBinding FontSize}" 
              FontWeight="Bold" Foreground="White" 
              HorizontalAlignment="Center"  />
                    </Grid>
                </ControlTemplate>
            </DataGrid.RowValidationErrorTemplate>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="100"
                    Binding="{Binding ID_Account, Mode=OneWay, ValidatesOnExceptions=True,
                    UpdateSourceTrigger=PropertyChanged}">
                </DataGridTextColumn>
                <DataGridTextColumn Header="Логин" Width="150"
                    Binding="{Binding Login, Mode=OneWay, ValidatesOnExceptions=True,
                    UpdateSourceTrigger=PropertyChanged}">
                </DataGridTextColumn>                <DataGridTextColumn Header="Имя" Width="200"
                    Binding="{Binding Name, Mode=OneWay, ValidatesOnExceptions=True,
                    UpdateSourceTrigger=PropertyChanged}">
                </DataGridTextColumn>                <DataGridTextColumn Header="E-mail" Width="220"
                    Binding="{Binding Email, Mode=OneWay, ValidatesOnExceptions=True,
                    UpdateSourceTrigger=PropertyChanged}">
                </DataGridTextColumn>
                <DataGridComboBoxColumn Header="Роль" Width="140"
                    ItemsSource="{Binding Source={StaticResource listRole}}"
                    DisplayMemberPath="Name"
                    SelectedValueBinding="{Binding Path=Type, Mode=TwoWay,
                    UpdateSourceTrigger=PropertyChanged}"
                                        SelectedValuePath="ID_Type"/>

                <DataGridTextColumn Header="Номер телефона"
                    Binding="{Binding Phone, Mode=OneWay, ValidatesOnExceptions=True,
                    UpdateSourceTrigger=PropertyChanged}">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>


    </StackPanel>
    
    <Page.CommandBindings>
        <CommandBinding Command="Undo"
                        Executed="UndoCommandBinding_Executed"
                        CanExecute="UndoCommandBinding_CanExecute" />
        <CommandBinding Command="Save"
                        Executed="SaveCommandBinding_Executed"
                        CanExecute="SaveCommandBinding_CanExecute" />
        <CommandBinding Command="Find"
                        Executed="FindCommandBinding_Executed"
                        CanExecute="FindCommandBinding_CanExecute" />
        <CommandBinding Command="New"
                        Executed="AddCommandBinding_Executed"
                        CanExecute="AddCommandBinding_CanExecute" />
        <CommandBinding Command="Cut"
                        Executed="EditCommandBinding_Executed"
                        CanExecute="EditCommandBinding_CanExecute" />
        <CommandBinding Command="Delete"
                        Executed="DeleteCommandBinding_Executed"
                        CanExecute="DeleteCommandBinding_CanExecute" />
    </Page.CommandBindings>
</Page>
