<Window x:Class="lab1.FIndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1"
        mc:Ignorable="d"
        Title="Поиск" Height="228" Width="341" Closed="Window_Closed" WindowStyle="ToolWindow" ResizeMode="NoResize" ShowInTaskbar="False" Icon="/icons/Find.png" Topmost="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="589*"/>
            <ColumnDefinition Width="211*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="nameBox" HorizontalAlignment="Left" Margin="85,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="195" Height="31" Grid.ColumnSpan="2"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top"/>
        <Button HorizontalAlignment="Left" Margin="85,143,0,0" VerticalAlignment="Top" Height="31" Width="195" Click="Button_Click" Grid.ColumnSpan="2">
            <Image Source="icons/Find.png"/>
        </Button>
        <Button Grid.Column="1" HorizontalAlignment="Left" Margin="40,51,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_2">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <TextBox x:Name="phoneBox" HorizontalAlignment="Left" Margin="85,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="195" Height="31" Grid.ColumnSpan="2"/>
        <Label Content="Телефон" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top"/>
        <Button Grid.Column="1" HorizontalAlignment="Left" Margin="40,96,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_3">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <TextBox x:Name="emailBox" HorizontalAlignment="Left" Margin="85,96,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="195" Height="32" Grid.ColumnSpan="2"/>
        <Label Content="E-mail" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top"/>
        <Button Grid.Column="1" HorizontalAlignment="Left" Margin="40,10,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_1">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <Button Grid.Column="1" HorizontalAlignment="Left" Margin="40,143,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_4">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <Label Content="Поиск" HorizontalAlignment="Left" Margin="10,146,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
