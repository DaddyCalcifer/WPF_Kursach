<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1"
        xmlns:Model="clr-namespace:lab1.Model" x:Class="lab1.FIndWindow"
        xmlns:core ="clr-namespace:lab1.Model"
        mc:Ignorable="d"
        Title="Поиск" Height="324" Width="341" Closed="Window_Closed" WindowStyle="ToolWindow" ResizeMode="NoResize" ShowInTaskbar="False" Icon="/icons/Find.png" Topmost="True">
    <Window.Resources>
        <core:ListRole x:Key="listRole"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="589*"/>
            <ColumnDefinition Width="211*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="nameBox" HorizontalAlignment="Left" Margin="85,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="195" Height="31" Grid.ColumnSpan="2"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top"/>
        <Button HorizontalAlignment="Left" Margin="85,248,0,0" VerticalAlignment="Top" Height="31" Width="195" Click="Button_Click" Grid.ColumnSpan="2">
            <Image Source="icons/Find.png"/>
        </Button>
        <Button Grid.Column="1" HorizontalAlignment="Left" Margin="40,51,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_2">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <TextBox x:Name="phoneBox" HorizontalAlignment="Left" Margin="85,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="195" Height="31" Grid.ColumnSpan="2"/>
        <Label Content="Телефон" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top"/>
        <Button Grid.Column="1" HorizontalAlignment="Left" Margin="40,96,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_3">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <TextBox x:Name="emailBox" HorizontalAlignment="Left" Margin="85,96,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="195" Height="32" Grid.ColumnSpan="2"/>
        <Label Content="E-mail" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top"/>
        <Button Grid.Column="1" HorizontalAlignment="Left" Margin="40,10,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_1">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <Button Grid.Column="1" HorizontalAlignment="Left" Margin="40,248,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_4">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <Label Content="Поиск" HorizontalAlignment="Left" Margin="10,251,0,0" VerticalAlignment="Top"/>
        <Label Content="Роль" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="userTypeBox" HorizontalAlignment="Left" Margin="85,150,0,0" VerticalAlignment="Top" Width="195" Grid.ColumnSpan="2" Height="31" MouseDown="userTypeBox_MouseDown">
            <ComboBoxItem Content="Любая роль"/>
            <ComboBoxItem Content="Заблокирован"/>
            <ComboBoxItem Content="Кладовщик"/>
            <ComboBoxItem Content="Администратор"/>
        </ComboBox>
        <Button Grid.Column="1" HorizontalAlignment="Left" Margin="40,150,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_4">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <TextBox x:Name="loginBox" HorizontalAlignment="Left" Margin="85,198,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="195" Height="32" Grid.ColumnSpan="2"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="10,201,0,0" VerticalAlignment="Top"/>
        <Button Grid.Column="1" HorizontalAlignment="Left" Margin="40,198,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_5">
            <Image Source="/icons/Delete.png"/>
        </Button>

    </Grid>
</Window>