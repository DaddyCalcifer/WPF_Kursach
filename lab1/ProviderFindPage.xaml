<Page x:Class="lab1.ProviderFindPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lab1"
      mc:Ignorable="d"
      Height="324" Width="341"
      Title="ProviderFindPage" Unloaded="Page_Unloaded">

    <Grid Background="White">
        <TextBox x:Name="nameBox" HorizontalAlignment="Left" Margin="85,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="195" Height="31"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top"/>
        <Button HorizontalAlignment="Left" Margin="291,51,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_2">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <TextBox x:Name="phoneBox" HorizontalAlignment="Left" Margin="85,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="195" Height="31"/>
        <Label Content="Телефон" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top"/>
        <Button HorizontalAlignment="Left" Margin="291,10,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_1">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <Button HorizontalAlignment="Left" Margin="85,248,0,0" VerticalAlignment="Top" Height="31" Width="195" Click="Button_Click">
            <Image Source="/icons/Find.png"/>
        </Button>
        <Button HorizontalAlignment="Left" Margin="291,248,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_4">
            <Image Source="/icons/Delete.png"/>
        </Button>
        <Label Content="Поиск" HorizontalAlignment="Left" Margin="10,251,0,0" VerticalAlignment="Top"/>
        <Button HorizontalAlignment="Left" Margin="291,91,0,0" VerticalAlignment="Top" Height="31" Width="29" Click="Button_Click_3">
            <Image Source="/icons/Find.png"/>
        </Button>
        <TextBox x:Name="idBox" HorizontalAlignment="Left" Margin="85,91,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="195" Height="31"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
